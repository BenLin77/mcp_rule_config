# Basic Environment
export EDITOR='nvim'
export LANG=en_US.UTF-8
export PATH="$PATH:$HOME/.local/bin:/opt/nvim-linux64/bin"

# API Keys & Tokens - 從 ~/.env 讀取 (不要將機密 commit 到 Git!)
# 請在 ~/.env 中設定以下變數：
#   OBSIDIAN_VAULT, NOTION_TOKEN, GOOGLE_MAPS_API_KEY, BRAVE_API_KEY,
#   CONTEXT7_API_KEY, FIRECRAWL_API_KEY, N8N_API_URL, N8N_API_KEY
[ -f "$HOME/.env" ] && source "$HOME/.env"

# History
HISTFILE="$HOME/.zsh_history"
HISTSIZE=50000
SAVEHIST=10000
setopt SHARE_HISTORY
setopt APPEND_HISTORY
setopt INC_APPEND_HISTORY
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_ALL_DUPS

# Zsh Completion System (Fish-like Tab completion)
autoload -Uz compinit
compinit -C
zstyle ':completion:*' menu select
zstyle ':completion:*' matcher-list 'm:{a-zA-Z}={A-Za-z}'
zstyle ':completion:*' list-colors "${(s.:.)LS_COLORS}"
setopt AUTO_CD
setopt COMPLETE_IN_WORD
setopt GLOB_COMPLETE

# Common Aliases
alias python='python3'
alias pip='uv pip' 
alias ll='ls -la'
alias l='ls -l'
alias cd='z'
alias ..='cd ..'
alias ...='cd ../..'
alias g='git'

# FZF Configuration (Standard layout)
export FZF_DEFAULT_OPTS='--height 40% --layout=reverse --border'
# Source fzf keybindings and completion if they exist (common locations for apt install)
[ -f /usr/share/doc/fzf/examples/key-bindings.zsh ] && source /usr/share/doc/fzf/examples/key-bindings.zsh
[ -f /usr/share/doc/fzf/examples/completion.zsh ] && source /usr/share/doc/fzf/examples/completion.zsh

# Zoxide (Better cd)
eval "$(zoxide init zsh)"

# Plugins (Manual git clones)
source "$HOME/.zsh/zsh-autosuggestions/zsh-autosuggestions.zsh"
source "$HOME/.zsh/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh"

# Starship Prompt (Must be last)
eval "$(starship init zsh)"
